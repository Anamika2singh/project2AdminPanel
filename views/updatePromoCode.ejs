                    <div class="d-flex flex-column-fluid">
                        <!--begin::Container-->
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-xl-12 col-md-12">  
                            <form id="add" method="POST" action="/promo/updatePromoCode/<%=data._id%>" >
                                <div class="card card-custom gutter-b">
                                    <div class="card-body">
                                      
                                            <div class="form-group row">
                                             <div class="col-md-4">
                                                <label class="font-weight-bold">Name</label>
                                                <input type="text" value="<%=data.name%>" name="name" class="form-control" placeholder="Name" required="true" maxlength="100">
                                             </div>
                                             <div class="col-md-4">
                                                <label class="font-weight-bold">Description</label>
                                                <input type="text" value="<%=data.description%>" name="description" class="form-control" placeholder="Description" required="true" maxlength="200">
                                             </div>
                                             <div class="col-md-4">
                                                <label class="font-weight-bold">Type</label>
                                                <div class="radio-inline">
                                                    <label class="radio">
                                                    <%if(data.type == 1){%> 
                                                    <input type="radio" name="type" class="eventpricebox" value="1" checked>
                                                    <%}else{%>
                                                    <input type="radio" name="type" class="eventpricebox" value="1">
                                                    <%}%>
                                                    <span></span>%Discount</label>
                                                    <label class="radio">
                                                    <%if(data.type == 0){%> 
                                                    <input type="radio" name="type" class="eventpricebox" value="0" checked>
                                                    <%}else{%>
                                                    <input type="radio" name="type" class="eventpricebox" value="0">
                                                    <%}%>
                                                    <span></span>Flat</label>
                                                    
                                                </div>
                                                  
                                                      <div id="1" class="row form-group mt-3  boxevent" style="display: none;">
                                                         
                                                          <div class="col-8">
                                                            <input type="number" min="1" max="100" name="discount" class="form-control" placeholder="Discount" value="<%=data.discount%>">
                                                          </div>
                                                      </div>
                                         
                                            </div>
                                             
                                            </div>
                                            <div class="form-group row">      
                                                <div class="col-md-4">
                                                    <label class="font-weight-bold">Minimum CartValue</label>
                                                    <input type="number" value="<%=data.minimumCartValue%>" min="0" name="minimumCartValue" class="form-control" placeholder="minimumCartValue" required="true">
                                                 </div> 
                                                 <div class="col-md-4">
                                                    <label class="font-weight-bold">Maximum Discount</label>
                                                    <input type="number" value="<%=data.upTo%>"  min="0" name="upTo" class="form-control" placeholder="maximum discount" required="true" maxlength="200">
                                                 </div>
                                                <div class="col-md-4">
                                                    <label class="font-weight-bold">Valid From</label>
                                                   <% if(data.validFrom){
                                                      
                                                       %>
                                                       <input id="updatedValidFrom" type="hidden" name="updatedValidFrom" class="form-control" placeholder="validFrom" required="true" maxlength="200">   
                                                    <input id="validFrom" type="datetime-local" value="<%=moment(data.validFrom).format('YYYY-MM-DDTHH:MM').toString()%>" name="validFrom" class="form-control" placeholder="validFrom" required="true">                                                
                                                    <%}else{%>
                                                  
                                                    <input type="datetime-local" id="validFrom" value=" "  name="validFrom" class="form-control" placeholder="validFrom" required="true">
                                                   <%}%>
                                                  
                                                    
                                                 </div>
                                                
                                            </div>      
                                            <div class="form-group row">
                                                <div class="col-md-4">
                                                    <label class="font-weight-bold">Valid Till</label>
                                                    <% if(data.validTill){
                                                        %>
                                                        <input id="updatedValidTill" type="hidden" name="updatedValidTill" class="form-control" placeholder="validTill" required="true" maxlength="200">    
                                                    <input type="datetime-local" id="validTill"  name="validTill"  value="<%=moment(data.validTill).format('YYYY-MM-DDTHH:MM').toString()%>" class="form-control" placeholder="validTill" required="true" maxlength="100">
                                                    <%}else{%>
                                                        <input type="datetime-local" id="validTill" name="validTill"  value=" "class="form-control" placeholder="validTill" required="true" maxlength="100">
                                                        <%}%>
                                                    </div>
                                                
                                            </div>                                                                                                                                                                              
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-12 text-right">
                                                <a href="/promo/getPromoCode" class="btn ">Cancel</a>
                                                <button type="submit" form="add"  class="btn btn-success mr-3">Save</button>
                                            </div>

                                        </div>
                                    </div>
                               
                                </div>
                            </div>
                            </form>
                            </div>
                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <!--doc: add "bg-white" class to have footer with solod background color-->
                <div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
                    <!--begin::Container-->
                    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <!--begin::Copyright-->
                        <div class="text-dark order-2 order-md-1">
                            <span class="text-muted font-weight-bold mr-2">2021©</span>
                            <a href="#" target="_blank" class="text-dark-75 text-hover-primary">Admin Panel</a>
                        </div>
                        <!--end::Copyright-->
                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Footer-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Page-->
