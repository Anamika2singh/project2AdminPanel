                        <!--begin::Container-->
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-xl-12 col-md-12">
                                    <form id="add" action="/item/addSellingItem" method="POST" enctype="multipart/form-data" >       
                                    <div class="card card-custom gutter-b">
                                        <div class="card-body">
                                         
                                                <div class="form-group row"> 
                                                 <div class="col-md-4">
                                                    <label class="font-weight-bold">Item Name</label>
                                                    <input type="text" name="itemName" class="form-control" placeholder="Item Name" required="true" maxlength="100">
                                                 </div>
                                                 <div class="col-md-4">
                                                    <label class="font-weight-bold">Unit Price</label>
                                                    <input type="number" min="0" name="unitPrice" class="form-control" placeholder="Unit Price" required="true" maxlength="200">
                                                 </div>
                                                 

                                                 <div class="col-md-4">
                                                    <label class="font-weight-bold">Discount Price</label>
                                                    <input type="number"  min="0" name="discountPrice" class="form-control" placeholder="Discount Price"  maxlength="200">
                                                          </div>                                                                                          
                                                </div>
                                                
                                                <div class="form-group row">      
                                                    <div class="col-md-4">
                                                        <label class="font-weight-bold">Description</label>
                                                        
                                                        <textarea  name="description" class="form-control" placeholder="Description" rows="4" cols="7" required = "true"></textarea>
                                                     </div>
                                                     <div class="col-md-4">
                                                        <label class="font-weight-bold">Item Images</label>
                                                        <div class="dropzone dropzone-multi" id="kt_dropzone_5">
                                                            <div class="dropzone-panel mb-lg-0 mb-2">
                                                               <input type="file" class="dropzone-select  font-weight-bold btn-sm" id="image" name="itemImages" accept="image/*" multiple>
                                                            </div>
                                                       </div>
                                                     </div>
                                                </div>       
                                                                                                                                                                                                                    
                                        <div class="card-footer">
                                            <div class="row">
                                                <div class="col-12 text-right">
                                                    <a href="/item/getSellingItems" class="btn ">Cancel</a>
                                                    <button type="submit" form="add"  class="btn btn-success mr-3">Save</button>

                                                </div>

                                            </div>
                                        </div>
                                   
                                    </div>
                                </div>
                            </form>
                            </div>
                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
