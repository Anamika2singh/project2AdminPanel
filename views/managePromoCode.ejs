            <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
                <!--begin::Content-->
                <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                    <!--begin::Subheader-->
                    <div class="subheader py-3 py-lg-8 subheader-transparent" id="kt_subheader">
                        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                            <!--begin::Info-->
                            <div class="d-flex align-items-center mr-1">
                                <!--begin::Page Heading-->
                                <div class="d-flex align-items-baseline flex-wrap mr-5">
                                    <!--begin::Page Title-->
                                    <h2 class="d-flex align-items-center text-dark font-weight-bold my-1 mr-3">Manage Promo Code</h2>
                                    <!--end::Page Title-->

                                </div>
                                <!--end::Page Heading-->
                            </div>
                             <div><%=msg%></div>
                            <!--end::Info-->
                            <!--begin::Toolbar-->
                            <div class="d-flex align-items-center flex-wrap">
                                <!--begin::Button-->
                                <a href="/promo/getAddpromoCode" class="btn btn-primary btn-fixed-height font-weight-bold px-2 px-lg-5 mr-2">
                                    <i class="ki ki-plus icon-nm"></i> Add Promo Code
                                </a>
                                <!--end::Button-->
                            </div>
                            <!--end::Toolbar-->
                        </div>
                    </div>
                    <!--end::Subheader-->
                    <!--begin::Entry-->
                    <div class="d-flex flex-column-fluid">
                        <!--begin::Container-->
                        <div class="container-fluid">
                            <div class="card card-custom gutter-b">
									
                                <!--begin::Body-->
                                <div class="card-body py-0">
                                <!--begin::Table-->

                                <div class="my-4">
                                        <form>


                                          

                                        <div class="row justify-content-end">
                                            <div class="col-md-3">
                                            <div class="input-icon">                                               
                                            <input type="text" name="search" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                            <span>
                                                    <i class="flaticon2-search-1 text-muted"></i>
                                                </span>
                                           </div>
                                    </div> 

                                    <div class="col-md-3 my-2 px-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <select class="form-control" name="filter" id="">
                                                <option value="">Filter By </option>  
                                                        <option value="0" >Flat</option>                                                   
                                                         <option value="1" >%Discount</option>                                                                                                                                                                                    
                                            </select>
                                        </div>
                                    </div>
                                                                     
                                    <div class="col-md-3 my-2 px-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <select name="sort" class="form-control" id="">
                                                    <option value="">Sort By</option>
                                                  
                                                        <option value="NtoO">Newest To Oldest</option>                                                                                                                             
                                                        <option value="OtoN">Oldest To Newest</option>
                                                               
                                                </select>
                                        </div>
                                    </div>
                                    <div class="col-md-1 my-2 px-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <button type="submit" class="btn btn-primary btn-fixed-height font-weight-bold px-2 px-lg-5 mr-2">Apply</button>
                                        </div>
                                    </div>
                                        </form>
                                     </div>
                                  <!--end::Table-->
                                </div>
                                <!--end::Body-->
                            </div>
                            </div>
                            <!--begin::Advance Table Widget 1-->
                            <div class="card card-custom gutter-b">
                            
                                <!--begin::Body-->
                                <div class="card-body py-0">
                                    <!--begin::Table-->
                                    <div class="table-responsive">
                                        <table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_1">
                                            <thead>
                                                <tr class="text-left">
                                                    <th style="width: 50px; white-space: nowrap;" class="label-inline">
                                                        Sr. No.
                                                    </th>
                                                    <th>Name</th>                                    
                                                    <th>Description</th> 
                                                    <th>Type</th>            
                                                    <th>Minimum Cart Value</th>
                                                    <th>Valid From</th>
                                                    <th>Valid Till</th>   
                                                    <th>Action</th> 
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% let n=1;
                                                data.forEach(function(promo){%>
                                                   
                                                <tr>
                                                    <td>
                                                        <%=n%>
                                                    </td>
                                                    <td>
                                                       <a href="/promo/getUpdatePromoCode/<%=promo._id%>"><%=promo.name%></a> 
                                                    </td>                                                                                                                                                   
                                                    <td>
                                                        <%=promo.description%>
                                                    </td>
                                                    
                                                    <% if(promo.type == 0){%>
                                                        <td>Flat</td>            
                                                          <%}else if(promo.type == 1){%>
                                                            <td>%Discount</td> 
                                                            <%}%>	

                                                    <td>
                                                        <%=promo.minimumCartValue%>
                                                    </td>
                                                    <td>                                                       
                                                        <%=moment(promo.validFrom).format('DD/MM/YYYY HH:MM').toString();%>
                                                    </td>
                                                    <td>
                                                       
                                                        <%=moment(promo.validTill).format('DD/MM/YYYY HH:MM').toString();%>
                                                    </td>
                                                    
                                                    <td>
                                                        <a id="deletedGlobal" data-href="/promo/deletePromoCode/<%=promo._id%>" class="btn btn-icon btn-danger mb-1 btn-sm"> <i class="flaticon-delete"></i> </a>
                                                    </td>
                                                </tr>
                                               
                                               <%n++;})%>


                                            </tbody>
                                        </table>
                                    </div>
                                    <!--end::Table-->
                                </div>
                                <!--end::Body-->
                            </div>
                            <!--end::Advance Table Widget 1-->


                        </div>
                        <!--end::Container-->
                    </div>
                    <!--end::Entry-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <!--doc: add "bg-white" class to have footer with solod background color-->
                <div class="footer py-4 d-flex flex-lg-column" id="kt_footer">
                    <!--begin::Container-->
                    <div class="container d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <!--begin::Copyright-->
                        <div class="text-dark order-2 order-md-1">
                            <span class="text-muted font-weight-bold mr-2">2021©</span>
                            <a href="#" target="_blank" class="text-dark-75 text-hover-primary">Admin Panel</a>
                        </div>
                        <!--end::Copyright-->
                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Footer-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
